{
  "compilerOptions": {
    // "baseUrl": ".",
    // "paths": {
    //   "@/*": ["src/*"] // remove because it got some error
    // },
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "lib": ["es2016"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}